source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '3.4.8'

gem 'rails', '~> 8.1.2'

# 認証
gem 'devise'
gem 'devise-encryptable'

# ビュー関連
gem 'erb2haml'
gem 'haml-rails'
gem 'jbuilder'
gem 'rails_autolink'

# JavaScript/CSS
gem 'importmap-rails'
gem 'propshaft'

# iconv (レガシー対応)
gem 'iconv', '~> 1.1.1'

# Amazon API
gem 'ruby-aaws', require: 'amazon/aws/search'

gem 'hikidoc'
gem 'kaminari'
gem 'pg'

# Web server
gem 'puma'

group :development do
  # コードをキレイに
  gem 'dotenv-rails', require: 'dotenv/load'
  gem 'rubocop-rails'
end

gem 'httpclient'

# slackエラー通知
gem 'exception_notification'
gem 'exception_notification-rake'

# Ruby 3.4.8 対応
gem 'base64'
gem 'bigdecimal'
gem 'drb'
gem 'mutex_m'
gem 'nkf'

# Rails 8対応
gem 'benchmark'
gem 'logger'
gem 'ostruct'
gem 'rexml'
gem 'webrick'
