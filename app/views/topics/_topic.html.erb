<div style="width: 100%; background-color: #efefef; margin: 0px;">
<dl class="topic" style="margin: 0px;">
  <%= tag :a, :name => i %>
  <div align="right">
    <%= link_to "全部読む", topic %>
    <%= link_to "最新50", "#{topic_path(topic)}/|50" %>
  </div>
  <div style="padding: 0px 0px 10px 0px;">
  <b><font color="gray"><%= i %></font>
  <font size=5 color="#FF0000"><%= topic.title %></font>
  </b>
  </div>
  <% j = 0 %>
  <% topic.posts.each do |post| %>
    <% break if (j += 1) > 10 %>
    <%= render :file => "topics/_post", :locals => {:post => post} %>
  <% end %>
</dl>

<dl>
<%= form_for post = Post.new(:topic_id => topic.id) do |f|  %>
  <dt>
    <%= f.hidden_field :topic_id %>
    <%= f.submit "書き込み" %>
    E-mail： <%= f.text_field :email %>
  </dt>
  <dd>
    <%= f.text_area :content, {:rows => 5, :cols => 64} %>
    <br />
    <b>
    <%= link_to "全部読む", topic %>
    <%= link_to "板に戻る", topics_path %>
    </b>
  </dd>
<% end %>
</dl>
</div>
