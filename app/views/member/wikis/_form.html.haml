= form_for(@wiki) do |f|
  - if @wiki.errors.any?
    #error_explanation
      %h2
        = pluralize(@wiki.errors.count, "error")
        prohibited this wiki from being saved:
      %ul
        - @wiki.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "ページ名"
    %br/
    = f.text_field :name, :readonly => (@wiki.name && @wiki.name != "" ? true : nil)
  .field
    = f.label "タイトル"
    %br/
    = f.text_field :title
  .field
    = f.label "内容"
    %br/
    = f.text_area :content
  .field
    = f.label "公開は内部のみ"
    %br/
    = f.check_box :is_private
  .actions
    = f.submit
= raw HikiDoc.to_html(@notation)
