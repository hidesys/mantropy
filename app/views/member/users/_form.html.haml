= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "ペンネーム"
    %br/
    = f.text_field :name
  .field
    = f.label "本名"
    %br/
    = f.text_field :realname
  .field
    = f.label "パソコンメール"
    %br/
    = f.email_field :pcmail
  .field
    = f.label "携帯メール"
    %br/
    = f.email_field :mbmail
  .field
    = f.label "Twitterアカウント"
    %br/
    = f.text_field :twitter
  .field
    = f.label "外部Webサイト"
    %br/
    = f.text_field :url
  .field
    = f.label "外部向けAbout"
    %br/
    = f.text_area :publicabout, :rows => 4
  .field
    = f.label "内部向けAbout"
    %br/
    = f.text_area :privateabout, :rows => 4
  .field
    = f.label "入トロ年度"
    %br/
    = f.text_field :joined
  .field
    = f.label "入学年度"
    %br/
    = f.text_field :entered
  .actions
    = f.submit
