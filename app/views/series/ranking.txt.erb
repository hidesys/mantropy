<% @series.each do |serie| %>
<%= serie.name %>
<%= serie.authors.map{|a| a.name}.join("　") %>
<%= serie.magazines.select("DISTINCT name").map{|m| m.name}.join("　") %>
<%=raw serie.topic.posts.map{|p| "#{p.content.gsub(/([^。、\s　])[\r\n]/, "\\1\s\n").gsub(/[\r\n]/, "").gsub(/\>\>\s?(\d+)/) {">>#{p.topic.posts.where(:order => $1).first.user.name}"}}（#{(u = p.user).name}#{(r =u.ranks.where(:serie_id => serie.id).first) ? "：#{r.ranking_id == 1 ? r.rank : "糞#{r.rank}"}位" : nil}）"}.join("　") if (t = serie.topic) && t.posts %>

<% end %>
