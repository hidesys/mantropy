%h1 Listing posts
%table
  %tr
    %th Name
    %th Email
    %th Order
    %th Content
    %th Topic
    %th User
    %th
    %th
    %th
  - @posts.each do |post|
    %tr
      %td= post.name
      %td= post.email
      %td= post.order
      %td= post.content
      %td= post.topic
      %td= post.user
      %td= link_to 'Show', post
      %td= link_to 'Edit', edit_post_path(post)
      %td= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Post', new_post_path
