<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Order</th>
    <th>Content</th>
    <th>Topic</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.email %></td>
    <td><%= post.order %></td>
    <td><%= post.content %></td>
    <td><%= post.topic %></td>
    <td><%= post.user %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
