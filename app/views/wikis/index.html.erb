<h1>Wikiページの一覧</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th>Is private</th>
    <th>User</th>
    <th></th>
  </tr>

<% @wikis.each do |wiki| %>
  <tr>
    <td><%= link_to wiki.name, wiki %></td>
    <td><%= link_to wiki.title, wiki %></td>
    <td><%= link_to wiki.content[0..100], wiki %></td>
    <td><%= wiki.is_private %></td>
    <td><%= link_to wiki.user.name, user_path(wiki.user.name) %></td>
    <td><%= link_to 'Show', wiki %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '新しいWikiページを作る', new_wiki_path %>
