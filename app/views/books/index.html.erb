<h1>Listing books</h1>

<table>
  <tr>
    <th>Isbn</th>
    <th>Name</th>
    <th>Publisher</th>
    <th>Publicationdate</th>
    <th>Kind</th>
    <th>Detailurl</th>
    <th>Smallimgurl</th>
    <th>Mediumimgurl</th>
    <th>Largeimgurl</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.isbn %></td>
    <td><%= book.name %></td>
    <td><%= book.publisher %></td>
    <td><%= book.publicationdate %></td>
    <td><%= book.kind %></td>
    <td><%= book.detailurl %></td>
    <td><%= book.smallimgurl %></td>
    <td><%= book.mediumimgurl %></td>
    <td><%= book.largeimgurl %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

